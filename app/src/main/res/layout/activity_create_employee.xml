<!-- res/layout/activity_create_employee.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- AppBar / Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Tạo nhân viên"
        android:theme="?attr/actionBarTheme"
        android:popupTheme="?attr/actionBarPopupTheme"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"/>

    <!-- Content View -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/editTextEmployeeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên Nhân Viên"/>

        <EditText
            android:id="@+id/editTextDepartmentId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID đơn vị"/>

        <EditText
            android:id="@+id/editTextSdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số Điện Thoại"/>

        <EditText
            android:id="@+id/editTextChucVu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Chức vụ"/>

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"/>

        <ImageView
            android:id="@+id/imageViewEmployee"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitCenter"
            android:src="@drawable/images"/>


        <Button
            android:id="@+id/buttonPickImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn ảnh"/>

        <Button
            android:id="@+id/buttonSaveEmployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu Nhân Viên"/>
    </LinearLayout>
</LinearLayout>
